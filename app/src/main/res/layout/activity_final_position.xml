<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/final_positionAc"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="8"
    android:background="@drawable/terminate_navigation_sfumato"
    tools:context="it.univpm.gruppoids.iotforemergencyandnavigation.FinalPositionActivity">

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/final_pos"
        android:id="@+id/txtInsPosFinal"
        android:layout_marginTop="27dp"
        android:textSize="40sp"
        android:layout_weight="2"
        android:layout_gravity="center_horizontal"
        android:textAlignment="center"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/manual_sel"
        android:id="@+id/btnManSel"
        android:layout_marginTop="75dp"
        android:onClick="goFinalManualSel"
        android:layout_gravity="center_horizontal"
        android:width="300dp"
        android:height="60dp"
        android:padding="20dp"
        android:layout_weight="1"
        android:background="@drawable/background_button"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_sel"
        android:id="@+id/btnMenSel"
        android:layout_marginTop="110dp"
        android:onClick="goFinalMenuSel"
        android:layout_gravity="center_horizontal"
        android:width="300dp"
        android:height="60dp"
        android:padding="20dp"
        android:layout_weight="1"
        android:background="@drawable/background_button"/>
</LinearLayout>
