<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/manual_sel"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:weightSum="9"
    android:background="@drawable/terminate_navigation_sfumato"
    tools:context=".ChoosePlanActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/floor_choise"
        android:id="@+id/txtFloorChoise"
        android:layout_marginTop="30dp"
        android:textSize="40sp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        android:textAlignment="center"
        android:textColor="#ffffff"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q155"
        android:id="@+id/btn155"
        android:layout_marginTop="45dp"
        android:onClick="goFinalMap"
        android:layout_gravity="center_horizontal"
        android:width="300dp"
        android:height="60dp"
        android:padding="20dp"
        android:layout_weight="1"
        android:background="@drawable/background_button"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q150"
        android:id="@+id/btn150"
        android:layout_marginTop="52dp"
        android:onClick="goFinalMap"
        android:layout_gravity="center_horizontal"
        android:width="300dp"
        android:height="60dp"
        android:padding="20dp"
        android:layout_weight="1"
        android:background="@drawable/background_button"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Q145"
        android:id="@+id/btn145"
        android:layout_marginTop="58dp"
        android:onClick="goFinalMap"
        android:layout_gravity="center_horizontal"
        android:width="300dp"
        android:height="60dp"
        android:padding="20dp"
        android:layout_weight="1"
        android:background="@drawable/background_button"/>
</LinearLayout>

