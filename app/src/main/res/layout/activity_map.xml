<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mapactivity"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_sfumato"
    tools:context="it.univpm.gruppoids.iotforemergencyandnavigation.MapActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mapFloor"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_node_unselected"
        android:id="@+id/dicea"
        android:visibility="invisible" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_node_unselected"
        android:id="@+id/s1"
        android:visibility="invisible"/>

    <Button
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:text="@string/insert_init_pos"
        android:id="@+id/insert_pos"
        android:onClick="goMod"
        android:layout_gravity="center_horizontal|bottom"
        android:padding="20dp"
        android:background="@drawable/background_button"
        android:visibility="invisible"
        android:layout_marginBottom="0dp" />

</FrameLayout>