<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_sfumato"
    tools:context="it.univpm.gruppoids.iotforemergencyandnavigation.SplashActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/image_splash"
        android:layout_height="@dimen/image_splash"
        android:paddingTop="16dp"
        android:layout_weight="3"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="@dimen/width_text_splash"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:id="@+id/welcome"
        android:textSize="@dimen/text_splash"
        android:textColor="#ffffff"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:lines="4"
        android:layout_marginTop="33dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="4" />
</LinearLayout>
