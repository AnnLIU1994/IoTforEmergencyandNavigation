<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/background_sfumato"
    tools:context="it.univpm.gruppoids.iotforemergencyandnavigation.SplashActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/icona_welcome"
        android:layout_height="@dimen/icona_welcome"
        android:layout_centerHorizontal="true"
        android:paddingTop="16dp"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="@string/welcome"
        android:id="@+id/welcome"
        android:textSize="52dp"
        android:textColor="#ffffff"
        android:textIsSelectable="false"
        android:textAlignment="center"
        android:lines="4"
        android:layout_marginTop="33dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
